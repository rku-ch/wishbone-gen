<?xml version="1.0" encoding="UTF-8"?>
<!--This file describes the a complete system -->
<bus_description>
  <configuration>
    <description>
      Includes all configurations that are global to the bus
    </description>
    <error>true</error>
    <retry>false</retry>
    <expose_grants>true</expose_grants>
    <bus_type>shared</bus_type>
  </configuration>
  <arbiter>
    <description>
      List of all master components with additional informations for an arbiter
    </description>
    <type>fixed_priority</type>
    <master_components>
      <component>
        <name>or1420_instruction</name>
        <priority>3</priority>
        <signal>
          <tag>TGA_O</tag>
          <name>BSR</name>
          <width>8</width>
        </signal>
      </component>
      <component>
        <name>or1420_data</name>
        <priority>4</priority>
        <signal>
          <tag>TGA_O</tag>
          <name>BSR</name>
          <width>8</width>
        </signal>
      </component>
      <component>
        <name>hdmi_master</name>
        <priority>1</priority>
        <signal>
          <tag>TGA_O</tag>
          <name>BSR</name>
          <width>8</width>
        </signal>
      </component>
      <component>
        <name>camera</name>
        <priority>1</priority>
        <signal>
          <tag>TGA_O</tag>
          <name>BSR</name>
          <width>8</width>
        </signal>
      </component>
    </master_components>
  </arbiter>
  <memorymap>
    <name>MemoryMap</name>
    <description>
      Memory map with name of memory section, start address and size in Bytes
    </description>
    <memory_regions>
      <region>
        <name>sdram</name>
        <start_address>x00000000</start_address>
        <size>67108864</size>
        <signal>
          <tag>TGA_I</tag>
          <name>BSR</name>
          <width>8</width>
        </signal>
      </region>
      <region>
        <name>flash</name>
        <start_address>x04000000</start_address>
        <size>67108864</size>
        <signal>
          <tag>TGA_I</tag>
          <name>BSR</name>
          <width>8</width>
        </signal>
      </region>
      <region>
        <name>uart</name>
        <start_address>x50000000</start_address>
        <size>8</size>
        <!-- UART Cannot use burst-->
      </region>
      <region>
        <name>hdmi_slave</name>
        <start_address>x50000020</start_address>
        <size>16</size>
        <!-- HDMI slave Cannot use burst-->
      </region>
      <region>
        <name>bios</name>
        <start_address>xF0000000</start_address>
        <size>8192</size>
        <signal>
          <tag>TGA_I</tag>
          <name>BSR</name>
          <width>8</width>
        </signal>
      </region>
    </memory_regions>
  </memorymap>
</bus_description>